                <button onclick="switchTab('data')" id="btn-data" class="tab-btn active flex-1 py-3 text-center transition-colors">數據快照</button>
                <button onclick="switchTab('analysis')" id="btn-analysis" class="tab-btn flex-1 py-3 text-center transition-colors">深度解讀</button>
            </div>

            
            <div id="content-data" class="space-y-4">
                <div class="bg-highlight border border-red-200 rounded-xl p-5">
